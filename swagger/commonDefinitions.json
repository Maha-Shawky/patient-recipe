{
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "roles": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "securitySchemes": {
            "ApiKeyAuth": {
                "type": "apiKey",
                "in": "header",
                "name": "x-auth-token"
            }
        },
        "responses": {
            "404": {
                "description": "Not found"
            },
            "401": {
                "description": "Unauthorized"
            },
            "403": {
                "description": "Access denied"
            },
            "400": {
                "description": "Invalid body"
            }
        }
    }
}